<?xml version="1.0" encoding="utf-8"?>
<DatePicker xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bottomSheet"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".bottomDialog">

    <DatePicker
        android:id="@+id/DatePicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:calendarTextColor="@color/pure_white"
        android:layout_gravity="center_horizontal"
        android:calendarViewShown="false"
        android:datePickerMode="calendar"
        android:headerBackground="@color/light_purple"
        android:headerDayOfMonthTextAppearance="@color/light_purple"
        android:spinnersShown="true"
        android:yearListSelectorColor="@color/light_purple" />
</DatePicker>